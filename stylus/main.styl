@import './mixins.styl'
@import './variables.styl'
@import './formulario.styl'

html, body
    background: very-light-grey
    margin 0
    padding 0.5rem
    width 100%
    font-family 'Arvo', sans-serif
    box-sizing border-box

::-moz-selection, ::selection
    background purple
    color white

h1
    margin 0
    font-weight 700
    padding-bottom 0.5rem
    border-bottom 3px dashed purple

h4 
    margin 2rem 0 0 0
    font-weight 700
    padding-bottom 0.1rem
    border-bottom 1px solid grey

.container
    background white 
    display block
    max-width 1280px
    padding 1rem
    box-sizing border-box
    border-radius 1rem
    margin 0 auto
    box-shadow: rgba(0, 0, 0, 0.2) 0px 20px 25px -5px, rgba(0, 0, 0, 0.1) 0px 10px 10px -5px;


